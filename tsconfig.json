{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@admin/*": ["apps/admin/*"],
      "@admin/main/*": ["apps/admin/main/src/*"],
      "@admin/auth/*": ["apps/admin/auth/src/*"],
      "@admin/config/*": ["apps/admin/config/src/*"],
      "@admin/translate/*": ["apps/admin/translate/src/*"],
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "node", "@dcloudio/types"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "**/*.md",
    "**/dist"
  ]
}
